<!DOCTYPE html>
<html>
<style>
body {
  margin: 0;
  font-family: "Roboto";
}

.navbar {
  overflow: hidden;
  background-color: #000000;
}

.navbar a {
  float: left;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.navbar a:hover {
  background-color: rgb(212, 212, 212);
  color: black;
}

.navbar a.active {
  background-color: #05a56a;
  color: white;
}

.navbar a.auth {
  float: right;
}

.navbar a.activeAuth {
  background-color: #05a56a;
  color: white;
  float: right;
 }

input[type=text], input[type=password] {
  width: 98%;
  padding: 15px;
  margin: 8px 0 16px;
  display: inline-block;
  border: none;
  background: #f1f1f1;
}

input[type=text]:focus, input[type=password]:focus {
  background-color: rgb(212, 212, 212);
  outline: none;
}

select[type=text], input[type=password]:focus {
  width: 100%;
  padding: 15px;
  margin: 8px 0 16px;
  display: inline-block;
  border: none;
  background: #f1f1f1;
}
button {
  background-color: #05a56a;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  width: 100%;
  opacity: 0.9;
}

button:hover {
  opacity:1;
}

.container {
  padding: 10px;
}

.form-box {
  background-color: #252537;
  margin: 5% auto 15% auto; 
  border: 1px solid rgb(133, 133, 133);
  width: 100%;
}

hr {
  border: 1px solid #f0f0f0;
  margin-bottom: 30px;
}


</style>
<body style="background-color:#252E37">

<div class="navbar">
  <a href="/home">Home</a>
  <a class="active" href="">Create Tournament</a>
  <a href="/edit">Edit Tournament</a>
  <a href="/participate">Participate in a Tournament</a>
  <a href="/bracket">View Brackets</a>
  <a href="/history">View History</a>
  <a href="/contact">Contact</a>
  <a href="/withdraw" onclick="return confirm('Are you sure you want to Withdraw from the tournament?');">Withdraw</a>
  <a class="auth" href="/logout" id = "logoutB" display = 'none'>Logout</a>

</div>

<form class="form-box" onsubmit = "setCookie()" action="/create-tournament" method="post" >
    <div class="container" style="color:white">
      <h1>Create a Tournament</h1>
      <p>Please fill in tournament details.</p>
      <hr>
      <label for="name"><b>Tournament Name</b></label>
      <input type="text" placeholder="Enter Tournament Name" name="name" required>
      <br>
      <label for="no"><b>Number of Participants</b></label>
      <select type = "text" placeholder="Enter Number of Participants" name="no" id = "no" required>
        <option value = 4>4</option>
        <option value = 8>8</option>
        <option value = 16>16</option>
        <option value = 32>32</option>
        <option value = 32>64</option>
      </select>
      <label for="desc"><b>Tournament Description</b></label>
      <input type="text" placeholder="Enter Tournament Description" name="desc" required>      
      <label for="rules"><b>Tournament Rules</b></label>
      <input type="text" placeholder="Enter Tournament Rules" name="rules" required>
      <div>
        
        <button  type="submit" name="se">Create Tournament</button>
      </div>
    </div>
</form>
        <button onclick="setCookie()"  type="submit" name="se">Create Tournament</button>

<script>
  function setCookie() {
  var team = new Array(document.getElementById("no").value/2).fill(null).map(() => new Array(2).fill(null)); 
  var data = {teams: team,
    results:[[null]]
  };
  document.cookie = JSON.stringify(data);
  }
</script>
</body>
</html>
